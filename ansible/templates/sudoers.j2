## /etc/sudoers
## {{ ansible_managed }}

Defaults always_set_home, !requiretty, !tty_tickets, !visiblepw, \
  umask = 0022, umask_override, \
  secure_path = /sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin

Defaults env_reset
Defaults env_keep =  "COLORS DISPLAY EDITOR HOSTNAME HISTSIZE INPUTRC LS_COLORS"
Defaults env_keep += "MAIL PS1 PS2 USERNAME LANG LC_ADDRESS LC_CTYPE"
Defaults env_keep += "LC_COLLATE LC_IDENTIFICATION LC_MEASUREMENT LC_MESSAGES"
Defaults env_keep += "LC_MONETARY LC_NAME LC_NUMERIC LC_PAPER LC_TELEPHONE"
Defaults env_keep += "LC_TIME LC_ALL LANGUAGE XAUTHORITY"

root ALL = (ALL:ALL) ALL
%wheel ALL = (ALL:ALL) NOPASSWD: ALL
app ALL=NOPASSWD: /sbin/iptables, /usr/bin/python

#includedir /etc/sudoers.d

## eof
